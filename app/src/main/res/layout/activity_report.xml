<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.hanict.safepatrol.Report">
    <!-- 사고 구역 신고 레이아웃(서버연동이 안됨) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="10">
        <!-- 제목화면 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/report_reverse_button"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/reverse"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="사고 구역 신고"
                android:textColor="#2e2e2e"
                android:layout_gravity="center"
                android:textSize="20pt" />
        </LinearLayout>
        <!-- 사고유형 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="○"
                android:textColor="#2e2e2e"
                android:textSize="15pt" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사고유형"
                android:textColor="#2e2e2e"
                android:textSize="15pt" />
            <Spinner
                android:id="@+id/report_spinner"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_height="20pt" />
            <!-- 스크롤 이벤트 레이아웃 추가 -->
        </LinearLayout>
        <!-- 발생시간 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="○"
                android:textColor="#2e2e2e"
                android:textSize="15pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발생시간"
                android:textColor="#2e2e2e"
                android:textSize="15pt"/>
            <Button
                android:id="@+id/report_Date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:text="날짜 설정 ▽"
                android:textSize="8pt"/>
            <Button
                android:id="@+id/report_time_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="시간 설정 ▽"
                android:textSize="8pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 날짜 설정 위젯 숨겨 있음 -->
            <DatePicker
                android:id="@+id/report_datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <!-- 시간 설정 위젯 숨겨 있음 -->
            <TimePicker
                android:id="@+id/report_timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <!-- 스크롤 이벤트 레이아웃 추가 -->
        </LinearLayout>
        <!-- 발생지역 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="○"
                android:textColor="#2e2e2e"
                android:textSize="15pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발생지역"
                android:textColor="#2e2e2e"
                android:textSize="15pt"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="지도에서 찾기"
                android:layout_gravity="center"
                android:textSize="8pt"/>
            <!-- 스크롤 이벤트 레이아웃 추가 -->
        </LinearLayout>
        <!-- 위치 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:visibility="gone">
            <fragment
                android:id="@+id/report_map"
                android:layout_width="match_parent"
                android:layout_height="600px"
                class="com.google.android.gms.maps.MapFragment" />
        </LinearLayout>
        <!-- 발생사진 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="○"
                android:textColor="#2e2e2e"
                android:textSize="15pt" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발생사진"
                android:textColor="#2e2e2e"
                android:textSize="15pt" />
            <Button
                android:id="@+id/report_imagebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:text="앨범선택"
                android:textSize="8pt"/>
            <Button
                android:id="@+id/report_cambutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:text="사진촬영"
                android:textSize="8pt"/>
        </LinearLayout>
        <!-- 발생사진 보기 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/report_Imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
